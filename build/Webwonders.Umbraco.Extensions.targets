<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <PropertyGroup>
        <WebwondersUmbracoExtensionsContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\Webwonders.Umbraco.Extensions\**\*.*</WebwondersUmbracoExtensionsContentFilesPath>
    </PropertyGroup>

    <Target Name="CopyWebwondersUmbracoExtensionsAssets" BeforeTargets="Build">
        <ItemGroup>
            <WebwondersUmbracoExtensionsContentFiles Include="$(WebwondersUmbracoExtensionsContentFilesPath)" />
        </ItemGroup>
        <Message Text="Copying Webwonders.Umbraco.Extensions files: $(WebwondersUmbracoExtensionsContentFilesPath) - #@(WebwondersUmbracoExtensionsContentFiles->Count()) files"  Importance="high" />
        <Copy
            SourceFiles="@(WebwondersUmbracoExtensionsContentFiles)"
            DestinationFiles="@(WebwondersUmbracoExtensionsContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\Webwonders.Umbraco.Extensions\%(RecursiveDir)%(Filename)%(Extension)')"
            SkipUnchangedFiles="true" />

    </Target>

    <Target Name="ClearWebwondersUmbracoExtensionsAssets" BeforeTargets="Clean">
        <ItemGroup>
            <WebwondersUmbracoExtensionsDir Include="$(MSBuildProjectDirectory)\App_Plugins\Webwonders.Umbraco.Extensions\" />
        </ItemGroup>
        <Message Text="Clear old Webwonders.Umbraco.Extensions data"  Importance="high" />
        <RemoveDir Directories="@(WebwondersUmbracoExtensionsDir)"  />
    </Target>

</Project>
