<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <ContentTargetFolders>.</ContentTargetFolders>
        <PackageId>Webwonders.Umbraco.Extensions</PackageId>
        <Title>Webwonders.Umbraco.Extensions</Title>
        <Description>Extensions for Umbraco</Description>
        <Product>$(AssemblyName)</Product>
        <PackageTags>umbraco plugin package</PackageTags>
        <RootNamespace>Webwonders.Umbraco.Extensions</RootNamespace>
        <Version>9.0.0</Version>
        <Authors>Webwonders</Authors>
        <Company>$(Authors)</Company>
        <PackageProjectUrl>https://github.com/WebwondersNL/Webwonders.Umbraco.Extensions</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="NPOI" Version="2.5.6" />
        <PackageReference Include="Umbraco.Cms.Web.Website" Version="9.0.0" />
        <PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="9.0.0" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="App_Plugins\Webwonders.Umbraco.Extensions\**\*.*">
            <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
            <CopyToPublishDirectory>Always</CopyToPublishDirectory>
        </Content>
        <None Include="build\**\*.*">
            <Pack>True</Pack>
            <PackagePath>buildTransitive</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Models\" />
    </ItemGroup>
</Project>
