<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ContentTargetFolders>.</ContentTargetFolders>
        <PackageId>Webwonders.Umbraco.Extensions</PackageId>
        <Title>Webwonders.Umbraco.Extensions</Title>
        <Description>Extensions for Umbraco</Description>
        <Product>$(AssemblyName)</Product>
        <PackageTags>umbraco plugin package</PackageTags>
        <RootNamespace>Webwonders.Umbraco.Extensions</RootNamespace>
        <Version>13.0.0</Version>
        <Authors>Webwonders</Authors>
        <Company>$(Authors)</Company>
        <Nullable>enable</Nullable>
        <PackageProjectUrl>https://github.com/WebwondersNL/Webwonders.Umbraco.Extensions</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="NPoco" Version="5.7.1" />
        <PackageReference Include="NPOI" Version="2.6.2" />
        <PackageReference Include="Umbraco.Cms.Web.BackOffice" Version="[13]" />
        <PackageReference Include="Umbraco.Cms.Web.Website" Version="[13]" />
    </ItemGroup>
</Project>
